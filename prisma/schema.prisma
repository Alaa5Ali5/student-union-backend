// This is your Prisma schema file,
// learn more about it in the docs: https://pris.lyd/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ======================================
//          نماذج قاعدة البيانات
// ======================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model College {
  id                 String   @id @default(cuid())
  name               String   @unique
  academicYearsCount Int      // ++ إضافة: حقل لتحديد عدد السنوات الدراسية
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

// -- حذف: تم حذف نموذج Specialization بالكامل لأنه لم يعد مطلوبًا --

model Field {
  id           String        @id @default(cuid())
  name         String        @unique
  applications Application[]
}

model Application {
  id                String          @id @default(cuid())
  fullName          String
  phoneNumber       String          @unique
  college           String
  // -- حذف: تم حذف حقل التخصص --
  // specialization String
  academicYear      Int
  
  interestedFields  Field[]

  hasExperience     Boolean
  experienceDetails String?
  
  portfolioLinks    PortfolioLink[]

  equipmentDetails  String?
  reasonToJoin      String
  status            String          @default("pending")
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
}

model PortfolioLink {
  id            String      @id @default(cuid())
  url           String
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  applicationId String
}